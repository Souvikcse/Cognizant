@using MVCBasics.Models;
@model MenuItem
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<h4>Menu Item</h4>

<div class="container">
    @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Price)
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @type = "number", @class = "form-control", @min = "1" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateOfLaunch, "Launch Date")
            @Html.EditorFor(m => m.DateOfLaunch, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Category)
            @Html.DropDownListFor(m => m.Category, new List<SelectListItem>()
               {
                    new SelectListItem{ Text="Main Course", Value="Main Course" },
                    new SelectListItem{ Text="Starters", Value="Starters" },
                    new SelectListItem{ Text="Desserts", Value="Desserts" }
               }, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <input type="submit" value="Submit" />
    }
</div>

